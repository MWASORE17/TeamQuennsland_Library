<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <ImageView
            android:layout_width="90dp"
            android:layout_height="120dp"
            android:id="@+id/imgHomeBookList"
            android:layout_marginRight="5dp"
            android:src="@mipmap/ic_launcher"/>
        <TextView
            android:id="@+id/genreBookList"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="-15dp"
            android:text="Genre"/>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/titleHomeBookList"
            android:text="Title"
            android:textStyle="bold"
            android:textSize="20sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="stock"
            android:id="@+id/stockHomeBookList"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/authorHomeBookList"
            android:text="Title"
            android:layout_below="@id/titleHomeBookList"
            android:textSize="15sp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/deskripsiHomeBookList"
            android:layout_below="@id/authorHomeBookList"
            android:text="Deskripsi"/>
    </RelativeLayout>
</LinearLayout>